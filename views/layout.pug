include ./mixins/event.pug

doctype html
html(lang="en")
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1, user-scalable=no')
    // The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags

    meta(name='description', content='The explorer for the Ethereum blockchain')
    meta(name='author', content='bitfly')
    meta(name='keywords', content='ethereum, explorer, blockchain, etherchain, cryptocurrency, cryptocurrencies, bitcoin')

    title Etherchain Light

    //link(href=config.bootstrapUrl, rel="stylesheet", crossorigin="anonymous")
    //link(rel='stylesheet', href=basepath + '/stylesheets/style.css')
    link(rel='stylesheet', href="https://cdn.jsdelivr.net/npm/semantic-ui@2.3.3/dist/semantic.min.css")
    link(rel='stylesheet', href=basepath + '/stylesheets/style.css')

  body
    div(class="ui width center aligned padded grid")
      div(class="fourteen column")
        div(class='ui blue inverted stackable menu')
          a(class='item' href=basepath + '/') Home
          a(class='item' href=basepath + '/accounts') Accounts
          a(class='item' href=basepath + '/events') Events
          div(class='ui dropdown item') Tools 
            i(class='dropdown icon')
            div(class='menu')
              a(class='item' href=basepath + '/tx/submit') Submit Tx
              a(class='item' href=basepath + '/contract/verify') Verify Contract
              a(class='item' href=basepath + '/signature/verify') Verify Signature
              //a(class='item' href=basepath + '/tx/pending') Pending Tx
          div(class="right item")
            form(class="ui form" action=basepath + "/search", method="POST")
              div(class="field")
                div(class="ui action input")
                  input(type="text" placeholder="Block / Tx / Account"  name='search')
                  button(class="ui yellow button" type='submit') Search
    
    block content
    script.
      $(function () {
        $('[data-toggle="tooltip"]').tooltip()

        $('select.form-control').on('change',
           function(e){
             $(e.currentTarget).parent().find('span').addClass('hide');
             $(e.currentTarget).parent().find('span.'+this.value).removeClass('hide');
        });
      })

    div(class="ui width center aligned padded grid")
        div(class="fourteen column")
          div(class="ui attached message")
            p
              a(href="https://github.com/gobitfly/etherchain-light") Etherchain Light
              |  | #{nodeStatus.version} | #{nodeStatus.nbrPeers} Peers connected
        

    script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js")
    script(src=basepath + '/semanticFunctions.js')
    script(src="https://cdn.jsdelivr.net/npm/semantic-ui@2.3.3/dist/semantic.min.js")
